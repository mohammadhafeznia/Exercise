        </tr>
      </thead>
      <tbody>
        @if (ViewBag .list!=null)
        {int i=1;
            @foreach (var item in ViewBag .list)
        {
            <tr>
          <td></td>
          <td >@i
          </td>
          <td class="product-name"> @item.Name   </td>
           <td class="product-name"> @item.Family    </td>
