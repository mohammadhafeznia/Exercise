               <img src="/upload/@item.image"alt="" style="width: 100px; height:100px; border-radius:50%; "  >
               
                 </td>

                  <td class="product-name"> 
                  <a href="~/upload/@item.FileName"><i class="feather icon-download"></i></a>
                  
                   </td>
         
         
          
          
       
          <td class="product-action">
            <a href="/home/update/@item.Id"><i class="feather icon-edit"></i></a>
           
            <a onclick="return confirm('آیا از حذف رکورد مورد نظر مطمئ ن هستید؟')" href="/home/del/@item.Id"><i class="feather icon-trash"></i></a>
          </td>
        </tr>
        i++;
        }
        
        }
        
        

