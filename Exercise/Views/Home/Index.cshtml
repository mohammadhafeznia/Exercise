                            <input type="text" asp-for="Name" class="form-control" placeholder="نام" required="">
                            <label for="inputName">نام</label>
                          </div>
                          <div class="form-label-group">
                            <input type="text" asp-for="Family" class="form-control" placeholder="نام خانوادگی"
                              required="">
                            <label for="inputEmail">نام خانوادگی</label>
                          </div>
                          <div class="form-label-group">
                            <input type="text" asp-for="Address" class="form-control" placeholder="آدرس " required="">
